<div class="row">
  <h2>Listado de Retenciones</h2>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Vencimiento</th>
      <th class="text-right">Monto</th>
      <th>Factura</th>
      <th>Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @retenciones.each do |retencion| %>
      <tr class="ir-a" data-uri="<% con_obra? retencion_path(retencion) %>">
        <td><%= link_to '', [retencion], class:"glyphicon glyphicon-eye-open" %></td>
        <td><%= formatted_date(retencion.fecha_vencimiento) %></td>
        <td><%= formatted_number(retencion.monto) %></td>
        <td><%= retencion.factura.descripcion.first(40) %></td>
        <td>Aca va el estado</td>
      </tr>
    <% end %>
  </tbody>
</table>
