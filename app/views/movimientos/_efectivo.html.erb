<h4>Pago en efectivo</h4>

<%= fields_for :causa do |f| %>
  <%= hidden_field_tag 'causa_tipo', 'efectivo' %>

  <div class="field form-group col-md-5" >
    <%= f.label :caja %>
    <%= f.collection_select(:caja_id, cajas_de_efectivo, :id, :tipo,
      { prompt: "-Seleccione Caja-" }, { class: "form-control", required: true } ) %>
  </div>
  <div class="field form-group col-md-5 text-right" >
    <%= f.label :monto %>
    <%= f.text_field :monto, class: 'form-control text-right', data: { role:'money', a_sep:'.', a_dec:',' } %>
  </div>
  <div class="field form-group col-md-2" >
    <br>
    <%= f.submit 'Agregar', name: 'agregar_causa', class: 'btn btn-success form-control nivelar-boton' %>
  </div>
<% end %>
