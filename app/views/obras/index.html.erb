<div class="row">
  <h2>Listado de Obras
    <a type="button" class="btn btn-primary col-md-2 pull-right" href="<%= new_obra_path %>">
      <span class="glyphicon glyphicon-plus"></span>
      Nueva Obra
    </a>
  </h2>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Saldo General</th>
      <th>Saldo de Pagos</th>
      <th>Saldo de Cobros</th>
    </tr>
  </thead>

  <tbody>
    <% @obras.each do |obra| %>
      <tr class="ir-a" data-uri="<%= obra_path(obra.id) %>">
        <td><%= link_to raw('<i class="glyphicon glyphicon-eye-open" title="Ver Obra"></i>'), [obra] %></td>
        <td><%= obra.nombre %></td>
        <td><%= obra.direccion %></td>
        <td><%= obra.saldo_general %></td>
        <td><%= obra.saldo_de_pago %></td>
        <td><%= obra.saldo_de_cobro %></td>
      </tr>
    <% end %>
  </tbody>
</table>
