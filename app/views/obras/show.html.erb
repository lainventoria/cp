<h2><%= @obra.nombre %></h2> 

<div class="row">
  <div class="col-md-6">

    <%= render 'situacion_economica' %>

    <div class="row col-md-12">
      <%= render 'form' %>
      <br>

      <a type="button" class="btn btn-success col-md-5" href="<%= obras_path %>">
        <span class="glyphicon glyphicon-list-alt"></span>
        Listar Obras
      </a>
      <a type="button" class="btn btn-warning col-md-5 col-md-offset-2" href="<%= edit_obra_path(@obra) %>">
        <span class="glyphicon glyphicon-edit"></span>
        Editar Obra
      </a>
    </div>
  </div>

  <div class="col-md-6">
    <%= render 'situacion_financiera' %>
    <%= render 'unidades_funcionales/reporte' %>

  </div>
</div>
