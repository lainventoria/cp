<div class="row">
  <h2>Listado cajas
    <a type="button" class="btn btn-primary col-md-2 pull-right" href="<%= new_caja_path %>">
      <span class="glyphicon glyphicon-plus"></span>
      Nueva Caja
    </a>
  </h2>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Obra</th>
      <th>Tipo de Caja</th>
      <th>Saldo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cajas.each do |caja| %>
      <tr class="ir-a" data-uri="<%= caja_path(caja.id)%>">
        <td><%= link_to '', [caja], class:"glyphicon glyphicon-eye-open" %></td>
        <td><%= caja.obra.nombre %></td>
        <td><%= caja.tipo %></td>
        <td><%= saldo_movimientos (caja.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
