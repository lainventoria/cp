<h1>Listado cajas</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Obra</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cajas.each do |caja| %>
      <tr>
        <td><%= @obra.nombre %></td>
        <td><%= link_to 'Ver', [@obra, caja] %></td>
        <td><%= link_to 'Editar', edit_obra_caja_path(@obra, caja) %></td>
        <td><%= link_to 'Borrar', [@obra, caja], method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Caja', edit_obra_path(@obra) %>
