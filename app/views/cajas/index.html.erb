<h1>Listado cajas</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Obra</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cajas.each do |caja| %>
      <tr>
        <td><%= caja.obra %></td>
        <td><%= link_to 'Ver', caja %></td>
        <td><%= link_to 'Editar', edit_caja_path(caja) %></td>
        <td><%= link_to 'Borrar', caja, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

