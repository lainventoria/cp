<%= form_for @caja do |f| %>
  <% if @caja.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@caja.errors.count, "error") %>. No se guardo la caja por:</h2>

      <ul>
      <% @caja.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :obra_id %><br>
    <%= collection_select(:caja, :obra_id, Obra.all, :id, :nombre, class: "form-control" ) %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn-primary btn submit" %>
  </div>
<% end %>
