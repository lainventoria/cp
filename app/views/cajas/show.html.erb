<h2>Detalles de <%= caja_o_cuenta %></h2> 
<% if !notice.nil? %>
  <div id="notice" class="alert alert-success"><%= notice %></div>
<% end %>

<%= render 'form', opciones_formulario_caja %>

<div class="row">
  <div class="col-md-2">
    <a type="button" class="btn btn-success col-md-12" href="<%= con_obra? cajas_path %>">
      <span class="glyphicon glyphicon-list-alt"></span>
      Listar <%= caja_o_cuenta.pluralize %>
    </a>
  </div>
  <div class="col-md-2 col-md-offset-1">
    <a type="button" class="btn btn-warning col-md-12" href="<%= con_obra? edit_caja_path(@caja) %>">
      <span class="glyphicon glyphicon-edit"></span>
      Editar <%= caja_o_cuenta %>
    </a>
  </div>
</div>

<br>

<div class="row">
  <div class="field form-group col-md-2">
    <label>Saldo en ARS</label>
    <span class="form-control text-right"><%= formatted_number(@caja.total('ARS')) %></span>
  </div>
  <div class="field form-group col-md-2 col-md-offset-1 <%= ver_en_caja %>">
    <label>Saldo en USD</label>
    <span class="form-control text-right"><%= formatted_number(@caja.total('USD')) %></span>
  </div>
</div>

<div class="row col-md-6">
  <h4>Listado de Movimientos</h4>
  <%= render 'movimientos/list', movimientos: @caja.movimientos %> 
</div>
