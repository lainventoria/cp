<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Obra</th>
      <th id="lista_banco">Banco</th>
      <th>Tipo</th>
      <th id="lista_banco">Numero</th>
      <th>Saldo ARS</th>
      <th id="lista_caja">Saldo USD</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% cajas.each do |caja| %>
      <tr class="ir-a" data-uri="<%= caja_path(caja.id)%>">
        <td><%= link_to '', [caja], class:"glyphicon glyphicon-eye-open" %></td>
        <td><%= caja.obra.nombre %></td>
        <td id="lista_banco"><%= caja.banco %></td>
        <td><%= caja.tipo %></td>
        <td id="lista_banco"><%= caja.numero %></td>
        <td><%= formatear_numero(caja.total('ARS')) %></td>
        <td id="lista_caja"><%= formatear_numero(caja.total('USD')) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
