<%= form_for(@cuenta) do |f| %>
  <% if @cuenta.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cuenta.errors.count, "error") %>. No se guardo la cuenta por:</h2>

      <ul>
      <% @cuenta.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :numero %><br>
    <%= f.text_field :numero, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :obra_id %><br>
    <%= f.number_field :obra_id, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary submit" %>
  </div>
<% end %>
