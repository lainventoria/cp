<h1>Listado de cuentas</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Número</th>
      <th>Obra</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas.each do |cuenta| %>
      <tr>
        <td><%= cuenta.numero %></td>
        <td><%= cuenta.obra %></td>
        <td><%= link_to 'Ver', cuenta %></td>
        <td><%= link_to 'Editar', edit_cuenta_path(cuenta) %></td>
        <td><%= link_to 'Borrar', cuenta, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Cuenta', new_cuenta_path %>
