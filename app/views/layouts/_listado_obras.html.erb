<li class="btn-group">
  <button type="button" class="btn btn-primary navbar-btn dropdown-toggle" data-toggle="dropdown">
  <% if @obra %>
  <%= @obra.nombre %>
  <% else %>
  Todas las Obras
  <% end %>
  <span class="caret"></span></button>
  <ul class="dropdown-menu" role="menu">
    <li>
      <%= link_to 'Todas las Obras', url_for(params.merge(obra_id: nil)) %>
    </li>
    <% Obra.find_each do |obra| %>
      <li>
      <%= link_to_obra(obra) %>
      </li>
    <% end %>
  </ul>
</li>
