<li class="btn-group" id="listado_de_obras">
  <button type="button" class="btn btn-primary navbar-btn dropdown-toggle" data-toggle="dropdown">
  <% if @obra %>
    <%= @obra.nombre %>
  <% else %>
    Todas las Obras
  <% end %>
  <span class="caret"></span></button>
  <ul class="dropdown-menu" role="menu">
    <li>
      <%= link_to 'Todas las obras', con_esta_obra %>
    </li>
    <% Obra.find_each do |obra| %>
      <li>
      <%= link_to obra.nombre, con_esta_obra(obra) %>
      </li>
    <% end %>
  </ul>
</li>
