<div class="row">
  <h2>Listado de Facturas por <%= @situacion %>
    <a type="button" class="btn btn-primary pull-right" href="<%= new_factura_path %>">
      <span class="glyphicon glyphicon-plus"> Nueva Factura</span>
    </a>
  </h2>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Tipo</th>
      <th>Número</th>
      <th>Fecha</th>
      <th>Vence</th>
      <th>Tercero</th>
      <th>Descripción</th>
      <th>Importe total</th>
      <th>Saldo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= link_to raw('<i class="glyphicon glyphicon-eye-open" title="Ver factura"></i>'), [factura] %></td>
        <td><%= factura.tipo.first(1) %></td>
        <td><%= factura.numero.first(10) %></td>
        <td><%= formatted_date(factura.fecha) %></td>
        <td><%= formatted_date(factura.fecha_pago) %></td>
        <td><%= factura.nombre.first(20) %></td>
        <td><%= factura.descripcion.first(40) %></td>
        <td><%= factura.importe_total %></td>
        <td><%= factura.saldo %></td>
        <td>
          <span class="pull-right">
					<%= link_to raw('<i class="glyphicon glyphicon-plus-sign" title="Nuevo recibo"></i>'), [:new, factura, :recibo] %>
          </span>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

