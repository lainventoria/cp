<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Vencimiento <%= sort_links @cheque, :fecha_vencimiento %></th>
      <th>Monto <%= sort_links @cheque, :monto_centavos %></th>
      <th>Beneficiario</th>
      <th>Chequera</th>
      <th>Banco</th>
    </tr>
  </thead>

  <tbody>
    <% @cheques.each do |cheque| %>
      <tr class="ir-a" data-uri="<%= con_obra? cheque_path(cheque.id) %>">
        <td><%= link_to '', cheque, class:"glyphicon glyphicon-eye-open" %></td>
        <td><%= formatted_date(cheque.fecha_vencimiento) %></td>
        <td><%= formatted_number(cheque.monto) %></td>
        <td><%= cheque.beneficiario %></td>
        <td><%= cheque.chequera.tipo %></td>
        <td><%= cheque.banco %></td>
      </tr>
    <% end %>
  </tbody>
</table>
