<div class="row">
  <h2>Editar Recibo</h2>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="row">
      <%= render 'form' %>
    </div>

    <div class="row">
      <a type="button" class="btn btn-danger col-md-3" href="<%= con_obra? factura_recibo_path %>" data-confirm="Estas seguro?" data-method="delete" rel="nofollow">
        <span class="glyphicon glyphicon-remove-circle"></span>
        Borrar Recibo
      </a>
      <a type="button" class="btn btn-warning col-md-3 col-md-offset-1" href="<%= con_obra? factura_recibo_path(@recibo.factura, @recibo) %>">
        <span class="glyphicon glyphicon-eye-open"></span>
        Volver a Recibo
      </a>
      <a type="button" class="btn btn-success col-md-3 col-md-offset-2" id="btnGuardar">
        <span class="glyphicon glyphicon-ok"></span>
        Guardar Cambios
      </a>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class="field form-group col-md-5 pull-right">
        <label>Saldo de la Factura</label><br>
        <span class="form-control text-right" disabled ><%= formatted_number(@factura.saldo) %></span>
      </div>
    </div>

    <div class="row col-md-offset-1">
      <h4>Detalle de Movimientos</h4>
      <%= render 'movimientos/list', movimientos: @recibo.movimientos, boton_borrar: '' %>
    </div>
    <div class="row">
      <br>
    </div>
    <div id='movimientos' class="row pull-right">
      <%= render 'movimientos/boton_agregar_medios_de_pago', situacion: determina_situacion_recibo %>
    </div>
  </div>
</div>
