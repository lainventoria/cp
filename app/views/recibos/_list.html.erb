<%# parametros ( lista_larga )
    lista_larga: ocultar campos usados solo en listdo detallado
    valor = [ "hidden", "" ]
%>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Fecha</th>
      <th class="<%= lista_larga %>">Tercero</th>
      <th class="<%= lista_larga %>">Factura</th>
      <th class="<%= lista_larga %>">Fecha Factura</th>
      <th class="text-right">Moneda</th>
      <th class="text-right">Importe</th>
    </tr>
  </thead>

  <tbody>
    <% @recibos.each do |recibo| %>
      <tr class="ir-a" data-uri="<%= con_obra? factura_recibo_path(recibo.factura, recibo) %>">
        <td><%= link_to '', [recibo.factura, recibo], class:"glyphicon glyphicon-eye-open" %></td>
        <td><%= formatted_date(recibo.fecha) %></td>
        <td class="<%= lista_larga %>"><%= recibo.factura.tercero.nombre.first(30) %></td>
        <td class="<%= lista_larga %>"><%= recibo.factura.tipo.first(1) %>-<%= recibo.factura.numero.first(10) %>: <%= recibo.factura.descripcion.first(30) %></td>
        <td class="<%= lista_larga %>"><%= formatted_date (recibo.factura.fecha) %></td>
        <td class="text-right"><%= recibo.importe_moneda %></td> 
        <td class="text-right"><%= formatted_number(recibo.importe) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

