<h2>Editar Indice</h2>

<%= render 'form' %>

<a type="button" class="btn btn-danger col-md-2" href="<%= indice_path %>" data-confirm="Estas seguro?" data-method="delete" rel="nofollow">
  <span class="glyphicon glyphicon-remove-circle"></span>
  Borrar Indice
</a>
<a type="button" class="btn btn-warning col-md-2 col-md-offset-1" href="<%= indice_path(@indice) %>">
  <span class="glyphicon glyphicon-eye-open"></span>
  Ver Indice
</a>
<a type="button" class="btn btn-success col-md-2 col-md-offset-2" id="btnGuardar">
  <span class="glyphicon glyphicon-ok"></span>
  Guardar Cambios
</a>
